<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:backgroundTint="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DFD7D7"
                android:padding="7dp"
                android:weightSum="3">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".7"
                    android:background="#DFD7D7"
                    android:padding="7dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/ok"
                        android:visibility="gone"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="35dp">

                        <RelativeLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/halka_white"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/profile_image"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:src="@drawable/box"
                                   />


                            </LinearLayout>


                        </RelativeLayout>


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/productName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ok"
                        android:paddingRight="3dp"
                        android:text="afafasd"
                        android:textColor="@color/black"
                        android:textSize="@dimen/twelve_sp_txt_size" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".7"
                    android:background="#DFD7D7"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/qtyLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/qtyEt"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/rac_shape_three"
                            android:gravity="center"
                            android:hint="0.00"
                            android:inputType="numberDecimal"
                            android:textColor="@color/app_color"
                            android:textColorHint="@color/app_color"
                            android:textSize="@dimen/twelve_sp_txt_size" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:background="#DFD7D7"
                    android:gravity="center">

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">


                        <EditText
                            android:id="@+id/priceEt"
                            inputType="numberDecimel"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:layout_marginLeft="5dp"
                            android:background="@drawable/rac_shape_three"

                            android:gravity="center"
                            android:hint="0.00"
                            android:inputType="numberDecimal"
                            android:textColor="@color/app_color"
                            android:textColorHint="@color/app_color"
                            android:textSize="@dimen/twelve_sp_txt_size" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="match_parent"

                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/priceTv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:text="200"
                            android:textColor="@color/black"
                            android:textSize="@dimen/twelve_sp_txt_size" />


                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/removeBtn"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#DFD7D7"
                    android:gravity="start"
                    android:src="@drawable/icon_cancel" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>