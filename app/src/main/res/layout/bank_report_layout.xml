<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="2dp"
                android:backgroundTint="@color/white"
                android:elevation="4dp"
                app:cardCornerRadius="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.7"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <LinearLayout
                                android:id="@+id/slLay"

                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".8"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="SL"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fifteen_sp_txt" />

                                <TextView
                                    android:id="@+id/sl"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.2"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text=":"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/fourteen_sp_text_size" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".8"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="Date"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fifteen_sp_txt" />

                                <TextView
                                    android:id="@+id/date"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.2"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text=":"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/fourteen_sp_text_size" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".8"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="Particulars"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fifteen_sp_txt" />

                                <TextView
                                    android:id="@+id/particulars"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.2"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text=":"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/fourteen_sp_text_size" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/chequeLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="horizontal"
                                android:visibility="gone"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".8"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="Cheque Number"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fifteen_sp_txt" />

                                <TextView
                                    android:id="@+id/chequeNumber"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.2"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text=":"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/fourteen_sp_text_size" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".8"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="Bank Name"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fifteen_sp_txt" />

                                <TextView
                                    android:id="@+id/bankName"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.2"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text=":"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/fourteen_sp_text_size" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".8"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="A/C Name"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fifteen_sp_txt" />

                                <TextView
                                    android:id="@+id/accountName"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.2"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text=":"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/fourteen_sp_text_size" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".8"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="A/C No"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fifteen_sp_txt" />

                                <TextView
                                    android:id="@+id/accountNo"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.2"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text=":"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/fourteen_sp_text_size" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".8"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="In (BDT)"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fifteen_sp_txt" />

                                <TextView
                                    android:id="@+id/in"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.2"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text=":"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/fourteen_sp_text_size" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".8"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="Out (BDT)"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fifteen_sp_txt" />

                                <TextView
                                    android:id="@+id/out"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.2"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text=":"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/fourteen_sp_text_size" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".8"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="Balance (BDT)"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fifteen_sp_txt" />

                                <TextView
                                    android:id="@+id/balance"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.2"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text=":"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/fourteen_sp_text_size" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/partyNameLayout"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".8"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="Party Name"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fifteen_sp_txt" />

                                <TextView
                                    android:id="@+id/partyName"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.2"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text=":"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/fourteen_sp_text_size" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/refLay"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".8"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="Ref. ID"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fifteen_sp_txt" />

                                <TextView
                                    android:id="@+id/refId"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.2"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text=":"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/fourteen_sp_text_size" />


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/processByLay"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight=".5"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".8"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text="Processed By"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fifteen_sp_txt" />

                                <TextView
                                    android:id="@+id/processBy"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.2"
                                    android:gravity="center_vertical"
                                    android:singleLine="true"
                                    android:text=":"
                                    android:textColor="@color/gray"
                                    android:textSize="@dimen/fourteen_sp_text_size" />


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/detailsBtnLayout"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight=".3"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageButton
                                android:id="@+id/viewBtn"
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:background="@color/cardview_light_background"
                                android:gravity="center"
                                android:padding="25dp"
                                android:scaleType="center"
                                android:src="@drawable/eye1" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>
</layout>