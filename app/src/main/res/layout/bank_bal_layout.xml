<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
         android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:id="@+id/sl"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".40"
                    android:background="@color/color_blue_gray"
                    android:gravity="center"
                    android:paddingTop="@dimen/five_dp_pading"
                    android:paddingBottom="@dimen/five_dp_pading"
                    android:singleLine="true"
                     android:textColor="@color/black"
                    android:textSize="@dimen/twelve_sp_txt_size" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".01">

                </LinearLayout>

                <TextView
                    android:id="@+id/bankName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".80"
                    android:background="@color/color_blue_gray"
                    android:gravity="center"
                     android:paddingTop="@dimen/five_dp_pading"
                    android:paddingBottom="@dimen/five_dp_pading"

                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_sp_txt_size" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".01">

                </LinearLayout>

                <TextView
                    android:id="@+id/accountName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/color_blue_gray"
                    android:gravity="center"
                     android:paddingTop="@dimen/two_dp_pading"
                    android:paddingBottom="@dimen/two_dp_pading"
                    android:paddingLeft="1dp"
                    android:paddingRight="1dp"

                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_sp_txt_size" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".01">

                </LinearLayout>

                <TextView
                    android:id="@+id/balance"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".78"
                    android:background="@color/color_blue_gray"
                    android:gravity="center"
                    android:paddingTop="@dimen/five_dp_pading"
                    android:paddingRight="@dimen/five_dp_pading"
                    android:paddingBottom="@dimen/five_dp_pading"

                    android:textAlignment="textEnd"
                    android:textColor="@color/black"
                    android:textSize="@dimen/twelve_sp_txt_size" />


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                android:background="@color/white" />

        </LinearLayout>
    </LinearLayout>


</layout>