<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:background="@drawable/border"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginBottom="2dp"
                        android:backgroundTint="@color/white"
                        android:elevation="4dp"
                        app:cardCornerRadius="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="3dp"
                                android:orientation="horizontal">

                                <LinearLayout

                                    android:layout_width="0dp"

                                    android:layout_height="wrap_content"
                                    android:layout_weight="2.6"
                                    android:orientation="vertical"
                                    android:weightSum="2">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight=".5"
                                        android:orientation="horizontal"
                                        android:visibility="gone"
                                        android:weightSum="2">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".8"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:text="SL"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/fourteen_sp_text_size" />

                                        <TextView
                                            android:id="@+id/sl"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.2"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:text=":"
                                            android:textColor="@color/gray"
                                            android:textSize="@dimen/thirteen_sp_size" />


                                    </LinearLayout>


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:visibility="gone"
                                        android:weightSum="2">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".8"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:text="ID"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/fourteen_sp_text_size" />

                                        <TextView
                                            android:id="@+id/id"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.2"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:text=":"
                                            android:textColor="@color/gray"
                                            android:textSize="@dimen/thirteen_sp_size" />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".8"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:text="Date"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/fourteen_sp_text_size" />

                                        <TextView
                                            android:id="@+id/date"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.2"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:text=":"
                                            android:textColor="@color/gray"
                                            android:textSize="@dimen/thirteen_sp_size" />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".8"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:text="Enterprise"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/fourteen_sp_text_size" />

                                        <TextView
                                            android:id="@+id/enterprise"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.2"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:text=":"
                                            android:textColor="@color/gray"
                                            android:textSize="@dimen/thirteen_sp_size" />


                                    </LinearLayout>

                                    <LinearLayout
                                        android:visibility="gone"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".8"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:text="Transaction ID"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/fourteen_sp_text_size" />

                                        <TextView
                                            android:id="@+id/transactionId"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.2"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:text=":"
                                            android:textColor="@color/gray"
                                            android:textSize="@dimen/thirteen_sp_size" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".8"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:text="Particular"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/fourteen_sp_text_size" />

                                        <TextView
                                            android:id="@+id/reference"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.2"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:text=":"
                                            android:textColor="@color/gray"
                                            android:textSize="@dimen/thirteen_sp_size" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".8"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:text="Company"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/fourteen_sp_text_size" />

                                        <TextView
                                            android:id="@+id/company"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.2"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:text=":"
                                            android:textColor="@color/gray"
                                            android:textSize="@dimen/thirteen_sp_size" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".8"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:text="@string/in_bdt"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/fourteen_sp_text_size" />

                                        <TextView
                                            android:id="@+id/receipt"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.2"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:text=":"
                                            android:textColor="@color/gray"
                                            android:textSize="@dimen/thirteen_sp_size" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight=".5"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".8"
                                            android:autoSizeMaxTextSize="@dimen/fourteen_sp_text_size"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:text="@string/out_bdt"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/fourteen_sp_text_size" />

                                        <TextView
                                            android:id="@+id/payment"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.2"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:text=":"
                                            android:textColor="@color/gray"
                                            android:textSize="@dimen/thirteen_sp_size" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight=".5"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight=".8"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:text="@string/balance_bdt"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/fourteen_sp_text_size" />

                                        <TextView
                                            android:id="@+id/balance"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1.2"
                                            android:autoSizeMaxTextSize="@dimen/fourteen_sp_text_size"
                                            android:gravity="center_vertical"
                                            android:singleLine="true"
                                            android:text=":"
                                            android:textColor="@color/gray"
                                            android:textSize="@dimen/fourteen_sp_text_size" />
                                    </LinearLayout>



                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/viewIcon"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".4"
                                    android:gravity="center">

                                    <ImageButton
                                        android:id="@+id/viewBtn"
                                        android:layout_width="35dp"
                                        android:layout_height="35dp"
                                        android:layout_marginTop="-5dp"
                                        android:background="@null"
                                        android:scaleType="fitXY"
                                        android:src="@drawable/eye1" />

                                </LinearLayout>


                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:weightSum="3">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_weight="1.05"
                                    android:gravity="center_vertical"
                                    android:paddingLeft="5dp"
                                    android:singleLine="true"
                                    android:text="Processed By"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/fourteen_sp_text_size" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.6"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=":"
                                        android:layout_gravity="center_vertical"
                                        android:textColor="@color/black" />

                                    <de.hdodenhof.circleimageview.CircleImageView
                                        android:id="@+id/purchaseImage"
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="2dp"
                                        android:layout_marginRight="2dp"
                                        android:src="@drawable/app_sub_logo"
                                        app:civ_border_color="@color/white"
                                        app:civ_border_width="2dp"
                                        app:layout_constraintBottom_toBottomOf="parent"
                                        app:layout_constraintEnd_toEndOf="parent"
                                        app:layout_constraintHorizontal_bias="0.059"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintVertical_bias="0.043" />

                                    <TextView
                                        android:id="@+id/processdBy"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                         android:singleLine="true"
                                        android:text="Shamsul Alam Azad"
                                        android:textSize="@dimen/thirteen_sp_size"
                                        android:textColor="@color/gray" />
                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</layout>